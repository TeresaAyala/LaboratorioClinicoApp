@page "/examenes/editarExamen/{id:int}"
@using LaboratorioClinicoApp.DTO
@using LaboratorioClinicoApp.Services
@inject ExamenService examenService
@inject NavigationManager navManager

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square"></i> Editar Examen
            </h3>
        </div>

        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger text-center">@errorMessage</div>
            }

            @if (examen == null)
            {
                <div class="text-center my-4">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3">Cargando información del examen...</p>
                </div>
            }
            else
            {
                <EditForm Model="@examen" OnValidSubmit="GuardarCambios">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Tipo de Examen</label>
                            <InputText class="form-control" @bind-Value="examen.TipoExamen" />
                            <ValidationMessage For="@(() => examen.TipoExamen)" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Fecha</label>
                            <InputDate class="form-control" @bind-Value="examen.Fecha" />
                            <ValidationMessage For="@(() => examen.Fecha)" />
                        </div>

                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Descripción</label>
                            <InputTextArea class="form-control" @bind-Value="examen.Descripcion" rows="3" />
                            <ValidationMessage For="@(() => examen.Descripcion)" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">ID Paciente</label>
                            <InputNumber class="form-control" @bind-Value="examen.IdPaciente" />
                            <ValidationMessage For="@(() => examen.IdPaciente)" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">ID Cita</label>
                            <InputNumber class="form-control" @bind-Value="examen.IdCita" />
                            <ValidationMessage For="@(() => examen.IdCita)" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Estado</label>
                            <InputSelect class="form-select" @bind-Value="examen.Estado">
                                <option value="true">Activa</option>
                                <option value="false">Cancelada</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => examen.Estado)" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="Volver">
                            <i class="bi bi-arrow-left-circle"></i> Volver
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int id { get; set; }
    private ExamenDTO? examen;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            examen = await examenService.GetExamenById(id);
            if (examen == null)
            {
                errorMessage = "No se encontró el examen especificado.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar el examen: {ex.Message}";
        }
    }

    private async Task GuardarCambios()
    {
        try
        {
            if (examen != null)
            {
                await examenService.UpdateExamen(examen.Id, examen);
                navManager.NavigateTo("/examenes");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al guardar los cambios: {ex.Message}";
        }
    }

    private void Volver()
    {
        navManager.NavigateTo("/examenes");
    }
}