@page "/examenes/editarExamenes/{id:int}"

@using LaboratorioClinicoApp.DTO
@using LaboratorioClinicoApp.Services

@inject ExamenService examenService
@inject PacienteService pacienteService
@inject NavigationManager nav

<h3 class="mb-4">Editar Examen</h3>

@if (examen == null || pacientes == null)
{
    <p>Cargando...</p>
}
else
{
    <EditForm Model="@examen" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />

        <div class="mb-3">
            <label class="form-label">Tipo de Examen</label>
            <InputText class="form-control" @bind-Value="examen.TipoExamen" />
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <InputDate class="form-control" @bind-Value="examen.Fecha" />
        </div>

        <div class="mb-3">
            <label class="form-label">Paciente</label>
            <InputSelect class="form-select" @bind-Value="examen.IdPaciente">
                @foreach (var p in pacientes)
                {
                    <option value="@p.Id">@p.Nombre @p.Apellido</option>
                }
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <InputSelect class="form-select" @bind-Value="examen.Estado">
                <option>Pendiente</option>
                <option>Completado</option>
                <option>Cancelado</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <InputTextArea class="form-control" @bind-Value="examen.Descripcion" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <button class="btn btn-secondary ms-2" @onclick="Cancelar">Cancelar</button>
    </EditForm>
}

@code {
    [Parameter] public int id { get; set; }

    ExamenDTO? examen;
    List<PacienteDTO>? pacientes;

    protected override async Task OnInitializedAsync()
    {
        pacientes = await pacienteService.GetPacientes();
        examen = await examenService.GetExamenById(id);
    }

    private async Task Guardar()
    {
        await examenService.UpdateExamen(id, examen);
        nav.NavigateTo("/examenes");
    }

    private void Cancelar()
    {
        nav.NavigateTo("/examenes");
    }
}
