@page "/examenes/editarExamen"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject ExamenService examenService
@inject NavigationManager navManager

<h3 class="text-center mb-4">Editar Examen</h3>

<div class="card p-4 shadow-sm">
    <EditForm Model="@examen" OnValidSubmit="GuardarCambios">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Tipo de Examen</label>
            <InputText @bind-Value="examen.TipoExamen" class="form-control" placeholder="Ingrese el tipo de examen" />
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <InputDate @bind-Value="examen.Fecha" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <InputTextArea @bind-Value="examen.Descripcion" class="form-control" rows="3" placeholder="Escriba una breve descripción" />
        </div>

        <div class="form-check mb-3">
            <InputCheckbox @bind-Value="examen.Estado" class="form-check-input" />
            <label class="form-check-label">Activo</label>
        </div>

        <div class="mb-3">
            <label class="form-label">ID Cita</label>
            <InputNumber @bind-Value="examen.IdCita" class="form-control" />
        </div>

        <div class="mb-4">
            <label class="form-label">ID Paciente</label>
            <InputNumber @bind-Value="examen.IdPaciente" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
    </EditForm>
</div>

@code {
    ExamenDTO examen = new ExamenDTO()
    {
        Id = 1,
        TipoExamen = "Sangre",
        Fecha = DateTime.Now,
        Descripcion = "Análisis general de sangre",
        Estado = true,
        IdCita = 2,
        IdPaciente = 3
    };

    void GuardarCambios()
    {
        // Aquí puedes enviar los datos a tu API
        Console.WriteLine($"Examen editado: {examen.TipoExamen}");
    }

    void Cancelar()
    {
        // Acción al cancelar (por ejemplo, volver a la lista)
        Console.WriteLine("Edición cancelada");
    }
}