@page "/examenes/agregarExamen"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject ExamenService examenService
@inject NavigationManager navManager

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white text-center">
            <h3 class="mb-0">
                <i class="bi bi-plus-circle"></i> Agregar Nuevo Examen
            </h3>
        </div>

        <div class="card-body">
            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-info text-center">@mensaje</div>
            }

            <EditForm Model="@nuevoExamen" OnValidSubmit="GuardarExamen">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Tipo de examen</label>
                        <InputText class="form-control" @bind-Value="nuevoExamen.TipoExamen" placeholder="Ej: Hemograma completo" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Fecha</label>
                        <InputDate class="form-control" @bind-Value="nuevoExamen.Fecha" />
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">Descripción</label>
                        <InputTextArea class="form-control" @bind-Value="nuevoExamen.Descripcion" rows="3" placeholder="Detalles del examen..." />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">ID del Paciente</label>
                        <InputNumber class="form-control" @bind-Value="nuevoExamen.IdPaciente" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">ID de la Cita</label>
                        <InputNumber class="form-control" @bind-Value="nuevoExamen.IdCita" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <InputCheckbox class="form-check-input ms-2" @bind-Value="nuevoExamen.Estado" />
                        <span class="ms-2">@((nuevoExamen.Estado) ? "Activo" : "Cancelado")</span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Guardar
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick='() => navManager.NavigateTo("/examenes")'>
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private ExamenDTO nuevoExamen = new ExamenDTO
    {
        Fecha = DateTime.Now,
        Estado = true
    };
    private string? mensaje;

    private async Task GuardarExamen()
    {
        try
        {
            await examenService.AddExamen(nuevoExamen);
            mensaje = "✅ Examen agregado correctamente.";
            await Task.Delay(1500);
            navManager.NavigateTo("/examenes");
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al guardar el examen: {ex.Message}";
        }
    }
}