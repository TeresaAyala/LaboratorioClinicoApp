@page "/examenes"
@page "/examenes"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject ExamenService examenService
@inject NavigationManager navManager

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">
                <i class="bi bi-flask"></i> Lista de Exámenes
            </h3>
        </div>

        <div class="card-body">

            <!-- 🔹 Barra de acciones superior -->
            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
                <div>
                    <button class="btn btn-success"
                            @onclick='() => navManager.NavigateTo("/examenes/agregarExamen")'>
                        <i class="bi bi-plus-circle me-1"></i> Agregar examen
                    </button>

                    <button class="btn btn-outline-secondary">
                        <i class="bi bi-funnel me-1"></i> Filtrar
                    </button>
                </div>

                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Buscar examen..." />
                </div>
            </div>
            <!-- 🔹 Fin barra superior -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger text-center">@errorMessage</div>
            }

            @if (examenes == null)
            {
                <div class="text-center my-4">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3">Cargando exámenes...</p>
                </div>
            }
            else if (examenes.Count == 0)
            {
                <div class="alert alert-warning text-center">
                    <i class="bi bi-exclamation-circle"></i> No hay exámenes registrados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-primary text-center">
                            <tr>
                                <th>Tipo de examen</th>
                                <th>Fecha</th>
                                <th>Descripción</th>
                                <th>Paciente ID</th>
                                <th>Cita ID</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var examen in examenes)
                            {
                                <tr>
                                    <td>@examen.TipoExamen</td>
                                    <td>@examen.Fecha.ToString("g")</td>
                                    <td>@examen.Descripcion</td>
                                    <td>@examen.IdPaciente</td>
                                    <td>@examen.IdCita</td>
                                    <td>
                                        @if (examen.Estado)
                                        {
                                            <span class="badge bg-success">Activa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Cancelada</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-primary"
                                                    @onclick='() => navManager.NavigateTo($"/examenes/editarExamen")'>
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<ExamenDTO>? examenes = null;
    private string? errorMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadExamen();
    }

    private async Task LoadExamen()
    {
        try
        {
            examenes = await examenService.GetExamenes();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar exámenes: {ex.Message}";
        }
    }
}