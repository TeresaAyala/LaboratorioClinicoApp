@page "/citas"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject CitaService citaService
@inject NavigationManager navManager

<h3>Lista de Citas</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (citas == null)
{
    <p><em>Cargando citas...</em></p>
}
else if (citas.Count == 0)
{
    <p>No hay citas registradas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha y Hora</th>
                <th>Motivo</th>
                <th>Notas</th>
                <th>Paciente ID</th>
                <th>Doctor ID</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in citas)
            {
                <tr>
                    <td>@cita.FechaHora.ToString("g")</td>
                    <td>@cita.Motivo</td>
                    <td>@cita.NotasConsulta</td>
                    <td>@cita.IdPaciente</td>
                    <td>@cita.IdDoctor</td>
                    <td>@(cita.Estado ? "Activa" : "Cancelada")</td>
                    <td>
                        <!-- Se van a cambiar la ruta despues, cuando se creen los formularios -->
                        <!-- Botón Editar con ruta placeholder -->
                        <button class="btn btn-sm btn-primary"
                                @onclick='() => navManager.NavigateTo($"/citas/editar/{cita.Id}")'>
                            Editar
                        </button>

                        <!-- Botón Agregar con ruta placeholder -->
                        <button class="btn btn-sm btn-success"
                                @onclick='() => navManager.NavigateTo("/citas/agregar-placeholder")'>
                            Agregar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CitaDTO>? citas = null;
    private string? errorMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadCitas();
    }

    private async Task LoadCitas()
    {
        try
        {
            citas = await citaService.GetCitas();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar citas: {ex.Message}";
        }
    }
}

