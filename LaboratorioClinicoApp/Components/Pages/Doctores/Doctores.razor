@page "/doctores"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject DoctorService doctorService
@inject NavigationManager navManager

<div class="container my-5" style="max-width: 1200px;">

    <!-- CARD PRINCIPAL -->
    <div class="card shadow-lg border-0 rounded-4">

        <!-- ENCABEZADO PROFESIONAL -->
        <div class="card-header text-white text-center"
             style="background: linear-gradient(135deg, #1b5e20, #43a047); border-radius: .8rem .8rem 0 0;">
            <h2 class="mb-0 fw-bold">
                <i class="bi bi-person-badge me-2"></i> Gestión de Doctores
            </h2>
        </div>

        <div class="card-body p-4">

            <!-- BARRA SUPERIOR -->
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">

                <!-- Botón agregar doctor -->
                <button class="btn btn-success shadow-sm rounded-pill px-4 py-2 fw-semibold"
                        @onclick='() => navManager.NavigateTo("/doctores/agregarDoctor")'>
                    <i class="bi bi-plus-circle me-2"></i> Nuevo Doctor
                </button>

                <!-- Búsqueda -->
                <div class="input-group shadow-sm" style="max-width: 350px;">
                    <span class="input-group-text bg-white">
                        <i class="bi bi-search text-success"></i>
                    </span>
                    <input type="text"
                           class="form-control border-start-0"
                           placeholder="Buscar por nombre, apellido o especialidad..."
                           @bind="searchTerm"
                           @bind:event="oninput" />
                </div>
            </div>

            <!-- ERRORES -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger text-center shadow-sm rounded-3">@errorMessage</div>
            }

            <!-- CARGANDO -->
            @if (doctores == null)
            {
                <div class="text-center my-5">
                    <div class="spinner-border text-success" style="width: 3rem; height: 3rem;"></div>
                    <p class="mt-3 fs-5 text-muted">Cargando doctores...</p>
                </div>
            }
            else if (doctores.Count == 0)
            {
                <div class="alert alert-warning text-center rounded-3 shadow-sm">
                    <i class="bi bi-exclamation-triangle"></i> No hay doctores registrados.
                </div>
            }
            else
            {
                <!-- TABLA -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="text-white"
                               style="background: linear-gradient(135deg, #2e7d32, #4caf50);">
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Especialidad</th>
                                <th>Teléfono</th>
                                <th>Email</th>
                                <th>Licencia Médica</th>
                                <th>Usuario</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>

                        <tbody class="table-group-divider">
                            @foreach (var doctor in filteredDoctores)
                            {
                                <tr class="align-middle">
                                    <td>@doctor.Nombre</td>
                                    <td>@doctor.Apellido</td>
                                    <td>@doctor.Especialidad</td>
                                    <td>@doctor.Telefono</td>
                                    <td>@doctor.Email</td>
                                    <td>@doctor.LicenciaMedica</td>
                                    <td>@doctor.IdUsuario</td>

                                    <td>
                                        @if (doctor.Estado == "Activo")
                                        {
                                            <span class="badge bg-success px-3 py-2 rounded-pill shadow-sm">
                                                Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger px-3 py-2 rounded-pill shadow-sm">
                                                Inactivo
                                            </span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <button class="btn btn-outline-primary btn-sm rounded-pill px-3 shadow-sm"
                                                @onclick='() => navManager.NavigateTo($"/doctores/editarDoctor/{doctor.Id}")'>
                                            <i class="bi bi-pencil-square me-1"></i> Editar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<DoctorDTO>? doctores = null;
    private string? errorMessage = null;

    // Buscador
    private string searchTerm = string.Empty;

    // Lista filtrada
    private List<DoctorDTO> filteredDoctores =>
        doctores == null || string.IsNullOrWhiteSpace(searchTerm)
        ? doctores ?? new List<DoctorDTO>()
        : doctores.Where(d =>
                (d.Nombre != null && d.Nombre.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                (d.Apellido != null && d.Apellido.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                (d.Especialidad != null && d.Especialidad.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
           ).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadDoctor();
    }

    private async Task LoadDoctor()
    {
        try
        {
            doctores = await doctorService.GetDoctors();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar doctores: {ex.Message}";
        }
    }
}
