@page "/doctores/editarDoctor/{id:int}"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject DoctorService doctorService
@inject NavigationManager navManager

<div class="container my-5" style="max-width: 900px;">

    <div class="card shadow-lg border-0 rounded-4">

        <!-- ENCABEZADO PROFESIONAL -->
        <div class="card-header text-white d-flex align-items-center justify-content-center"
             style="background: linear-gradient(135deg, #1b5e20, #43a047); height: 90px; border-radius: .7rem .7rem 0 0;">
            <h2 class="mb-0 fw-bold">
                <i class="bi bi-person-gear me-2"></i>Editar Información del Doctor
            </h2>
        </div>

        <div class="card-body p-4">

            @if (cargando)
            {
                <div class="text-center my-5">
                    <div class="spinner-border text-success" style="width: 3rem; height: 3rem;"></div>
                    <p class="mt-3 fs-5 text-muted">Cargando datos...</p>
                </div>
            }
            else if (error != null)
            {
                <div class="alert alert-danger text-center shadow-sm rounded-3">@error</div>
            }
            else
            {
                <EditForm Model="@doctor" OnValidSubmit="ActualizarDoctor">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <!-- SECCIÓN DATOS PERSONALES -->
                    <div class="mb-4 pb-2 border-bottom">
                        <h5 class="fw-bold text-success mb-3">
                            <i class="bi bi-person-lines-fill me-2"></i>Datos Personales
                        </h5>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Nombre</label>
                                <InputText class="form-control shadow-sm" @bind-Value="doctor.Nombre" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Apellido</label>
                                <InputText class="form-control shadow-sm" @bind-Value="doctor.Apellido" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Teléfono</label>
                                <InputText class="form-control shadow-sm" @bind-Value="doctor.Telefono" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Correo electrónico</label>
                                <InputText class="form-control shadow-sm" @bind-Value="doctor.Email" />
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN INFORMACIÓN PROFESIONAL -->
                    <div class="mb-4 pb-2 border-bottom">
                        <h5 class="fw-bold text-success mb-3">
                            <i class="bi bi-hospital me-2"></i>Información Profesional
                        </h5>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Especialidad</label>
                                <InputText class="form-control shadow-sm" @bind-Value="doctor.Especialidad" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Licencia Médica</label>
                                <InputText class="form-control shadow-sm" @bind-Value="doctor.LicenciaMedica" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">ID del Usuario</label>
                                <InputNumber class="form-control shadow-sm" @bind-Value="doctor.IdUsuario" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Estado</label>
                                <InputSelect class="form-select shadow-sm" @bind-Value="doctor.Estado">
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo">Inactivo</option>
                                </InputSelect>
                            </div>
                        </div>
                    </div>

                    <!-- BOTONES -->
                    <div class="d-flex justify-content-end mt-4 gap-3">
                        <button type="submit"
                                class="btn btn-success px-4 py-2 fw-bold shadow-sm rounded-pill">
                            <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                        </button>

                        <button class="btn btn-outline-secondary px-4 py-2 fw-bold shadow-sm rounded-pill"
                                @onclick='() => navManager.NavigateTo("/doctores/detalle/{id}")'>
                            <i class="bi bi-x-circle me-2"></i>Cancelar
                        </button>
                    </div>

                </EditForm>
            }
        </div>

    </div>
</div>

@code {
    [Parameter]
    public int id { get; set; }

    private DoctorDTO doctor = new();
    private bool cargando = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            doctor = await doctorService.GetDoctorById(id);
            cargando = false;
        }
        catch (Exception ex)
        {
            error = $"No se pudo cargar el doctor: {ex.Message}";
            cargando = false;
        }
    }

    private async Task ActualizarDoctor()
    {
        try
        {
            await doctorService.UpdateDoctor(doctor.Id, doctor);
            navManager.NavigateTo("/doctores");
        }
        catch (Exception ex)
        {
            error = $"Error al actualizar: {ex.Message}";
        }
    }
}
