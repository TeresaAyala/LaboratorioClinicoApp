@page "/doctores/editarDoctor/{id:int}"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject DoctorService doctorService
@inject NavigationManager navManager

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square"></i> Editar Doctor
            </h3>
        </div>

        <div class="card-body">

            @if (cargando)
            {
                <div class="text-center my-4">
                    <div class="spinner-border text-primary"></div>
                    <p class="mt-3">Cargando datos...</p>
                </div>
            }
            else if (error != null)
            {
                <div class="alert alert-danger text-center">@error</div>
            }
            else
            {
                <EditForm Model="@doctor" OnValidSubmit="ActualizarDoctor">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nombre</label>
                            <InputText class="form-control" @bind-Value="doctor.Nombre" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Apellido</label>
                            <InputText class="form-control" @bind-Value="doctor.Apellido" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Especialidad</label>
                            <InputText class="form-control" @bind-Value="doctor.Especialidad" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Teléfono</label>
                            <InputText class="form-control" @bind-Value="doctor.Telefono" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Correo electrónico</label>
                            <InputText class="form-control" @bind-Value="doctor.Email" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Licencia Médica</label>
                            <InputText class="form-control" @bind-Value="doctor.LicenciaMedica" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">ID del Usuario</label>
                            <InputNumber class="form-control" @bind-Value="doctor.IdUsuario" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Estado</label>
                            <InputSelect class="form-control" @bind-Value="doctor.Estado">
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </InputSelect>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i> Guardar Cambios
                        </button>

                        <button class="btn btn-secondary"
                                @onclick='() => navManager.NavigateTo("/doctores")'>
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int id { get; set; }

    private DoctorDTO doctor = new();
    private bool cargando = true;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            doctor = await doctorService.GetDoctorById(id);
            cargando = false;
        }
        catch (Exception ex)
        {
            error = $"No se pudo cargar el doctor: {ex.Message}";
            cargando = false;
        }
    }

    private async Task ActualizarDoctor()
    {
        try
        {
            await doctorService.UpdateDoctor(doctor.Id, doctor);
            navManager.NavigateTo("/doctores");
        }
        catch (Exception ex)
        {
            error = $"Error al actualizar: {ex.Message}";
        }
    }
}
