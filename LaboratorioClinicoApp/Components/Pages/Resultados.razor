@page "/ resultados"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject ResultadoService resultadoService
@inject NavigationManager navManager

<h3>Lista de Resultados</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (resultados == null)
{
    <p><em>Cargando resultados...</em></p>
}
else if (resultados.Count == 0)
{
    <p>No hay resultados registrados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Detalle</th>
                <th>Fecha de emision</th>
                <th>Examen ID</th>
                <th>Doctor ID</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resultado in resultados)
            {
                <tr>
                    <td>@resultado.Detalle</td>
                    <td>@resultado.FechaEmision.ToString("g")</td>
                    <td>@resultado.IdExamen</td>
                    <td>@resultado.IdDoctor</td>
                    <td>@(resultado.Estado ? "Activa" : "Cancelada")</td>
                    <td>
                        <!-- Se van a cambiar la ruta despues, cuando se creen los formularios -->
                        <!-- Botón Editar con ruta placeholder -->
                        <button class="btn btn-sm btn-primary"
                                @onclick='() => navManager.NavigateTo($"/resultados/editar/{resultado.IdResultado}")'>
                            Editar
                        </button>

                        <!-- Botón Agregar con ruta placeholder -->
                        <button class="btn btn-sm btn-success"
                                @onclick='() => navManager.NavigateTo("/resultados/agregar-placeholder")'>
                            Agregar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ResultadoDTO>? resultados = null;
    private string? errorMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadResultado();
    }

    private async Task LoadResultado()
    {
        try
        {
            resultados = await resultadoService.GetResultados();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar resultados: {ex.Message}";
        }
    }
}
