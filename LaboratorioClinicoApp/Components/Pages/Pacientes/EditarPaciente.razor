@page "/pacientes/editarPaciente/{id:int}"
@using LaboratorioClinicoApp.DTO
@using LaboratorioClinicoApp.Services
@inject PacienteService pacienteService
@inject DoctorService doctorService
@inject NavigationManager navManager

<div class="container my-5" style="max-width: 900px;">
    <div class="card shadow-lg border-0 rounded-4">

        <!-- HEADER -->
        <div class="card-header bg-gradient bg-primary text-white py-4 rounded-top-4">
            <h3 class="text-center mb-0">
                <i class="bi bi-pencil-square me-2"></i> Editar Paciente
            </h3>
        </div>

        <div class="card-body p-4">

            @if (errorMessage != null)
            {
                <div class="alert alert-danger text-center rounded-3">@errorMessage</div>
            }

            @if (successMessage != null)
            {
                <div class="alert alert-success text-center rounded-3">@successMessage</div>
            }

            @if (paciente == null)
            {
                <div class="text-center my-4">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3">Cargando información del paciente...</p>
                </div>
            }
            else
            {
                <EditForm Model="@paciente" OnValidSubmit="GuardarCambios">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row g-4">

                        <!-- Nombre -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Nombre</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="paciente.Nombre" />
                        </div>

                        <!-- Apellido -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Apellido</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="paciente.Apellido" />
                        </div>

                        <!-- Fecha nacimiento -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Fecha Nacimiento</label>
                            <InputDate class="form-control form-control-lg rounded-3" @bind-Value="paciente.FechaNacimiento" />
                        </div>

                        <!-- Telefono -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Teléfono</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="paciente.Telefono" />
                        </div>

                        <!-- Correo -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="paciente.Email" />
                        </div>

                        <!-- Dirección -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Dirección</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="paciente.Direccion" />
                        </div>

                        <!-- Usuario -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Usuario ID</label>
                            <InputNumber class="form-control form-control-lg rounded-3" @bind-Value="paciente.IdUsuario" />
                        </div>

                        <!-- Doctor -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Doctor Asignado</label>
                            <InputSelect class="form-select form-select-lg rounded-3" @bind-Value="paciente.IdDoctor">
                                @if (doctores == null)
                                {
                                    <option disabled>Cargando doctores...</option>
                                }
                                else
                                {
                                    <option value="0">-- Seleccione un doctor --</option>
                                    @foreach (var doc in doctores)
                                    {
                                        <option value="@doc.Id">@doc.Nombre @doc.Apellido</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                        <!-- Estado -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Estado</label>
                            <InputSelect class="form-select form-select-lg rounded-3" @bind-Value="paciente.Estado">
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>
                            </InputSelect>
                        </div>

                    </div>

                    <!-- BOTONES -->
                    <div class="mt-5 d-flex justify-content-center gap-3">
                        <button class="btn btn-primary px-4 py-2 rounded-3 fs-5" type="submit">
                            <i class="bi bi-save me-1"></i> Guardar Cambios
                        </button>

                        <button class="btn btn-secondary px-4 py-2 rounded-3 fs-5"
                                @onclick='() => navManager.NavigateTo("/pacientes", forceLoad: true)'>
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </button>
                    </div>

                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int id { get; set; }

    private PacienteDTO? paciente = null;
    private List<DoctorDTO>? doctores = null;

    private string? errorMessage = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            paciente = await pacienteService.GetPacienteById(id);
            doctores = await doctorService.GetDoctors();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al cargar información: " + ex.Message;
        }
    }

    private async Task GuardarCambios()
    {
        try
        {
            await pacienteService.UpdatePaciente(paciente.Id, paciente);
            successMessage = "Paciente actualizado correctamente.";

            await Task.Delay(1200);
            navManager.NavigateTo("/pacientes");
        }
        catch (Exception ex)
        {
            errorMessage = "Error al guardar los cambios: " + ex.Message;
        }
    }

    private string ObtenerNombreDoctor(int idDoctor)
    {
        var doc = doctores?.FirstOrDefault(d => d.Id == idDoctor);
        return doc != null ? doc.Nombre : "Sin asignar";
    }
}
