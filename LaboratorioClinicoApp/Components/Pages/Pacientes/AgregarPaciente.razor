@page "/pacientes/agregarPaciente"
@using LaboratorioClinicoApp.DTO
@using LaboratorioClinicoApp.Services
@inject PacienteService pacienteService
@inject DoctorService doctorService
@inject NavigationManager navManager

<div class="container my-5" style="max-width: 900px;">
    <div class="card shadow-lg border-0 rounded-4">

        <!-- Encabezado -->
        <div class="card-header bg-gradient bg-success text-white py-4 rounded-top-4">
            <h3 class="text-center mb-0">
                <i class="bi bi-person-plus-fill me-2"></i> Agregar Paciente
            </h3>
        </div>

        <div class="card-body p-4">

            @if (errorMessage != null)
            {
                <div class="alert alert-danger text-center rounded-3">@errorMessage</div>
            }

            @if (successMessage != null)
            {
                <div class="alert alert-success text-center rounded-3">@successMessage</div>
            }

            @if (doctores == null)
            {
                <div class="text-center my-4">
                    <div class="spinner-border text-success" role="status"></div>
                    <p class="mt-3">Cargando datos...</p>
                </div>
            }
            else
            {
                <EditForm Model="@nuevoPaciente" OnValidSubmit="GuardarPaciente">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row g-4">

                        <!-- Nombre -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Nombre</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="nuevoPaciente.Nombre" />
                        </div>

                        <!-- Apellido -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Apellido</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="nuevoPaciente.Apellido" />
                        </div>

                        <!-- Fecha nacimiento -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Fecha Nacimiento</label>
                            <InputDate class="form-control form-control-lg rounded-3" @bind-Value="nuevoPaciente.FechaNacimiento" />
                        </div>

                        <!-- Teléfono -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Teléfono</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="nuevoPaciente.Telefono" />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="nuevoPaciente.Email" />
                        </div>

                        <!-- Dirección -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Dirección</label>
                            <InputText class="form-control form-control-lg rounded-3" @bind-Value="nuevoPaciente.Direccion" />
                        </div>

                        <!-- Usuario -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Usuario ID</label>
                            <InputNumber class="form-control form-control-lg rounded-3" @bind-Value="nuevoPaciente.IdUsuario" />
                        </div>

                        <!-- Doctor asignado -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Doctor Asignado</label>
                            <InputSelect class="form-select form-select-lg rounded-3" @bind-Value="nuevoPaciente.IdDoctor">
                                <option value="">-- Seleccione un doctor --</option>
                                @foreach (var doc in doctores)
                                {
                                    <option value="@doc.Id">@doc.Nombre @doc.Apellido</option>
                                }
                            </InputSelect>
                        </div>

                        <!-- Estado -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Estado</label>
                            <InputSelect class="form-select form-select-lg rounded-3" @bind-Value="nuevoPaciente.Estado">
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </InputSelect>
                        </div>

                    </div>

                    <!-- Botones -->
                    <div class="mt-5 d-flex justify-content-center gap-3">
                        <button class="btn btn-success px-4 py-2 rounded-3 fs-5" type="submit">
                            <i class="bi bi-check-circle me-1"></i> Guardar Paciente
                        </button>

                        <button class="btn btn-secondary px-4 py-2 rounded-3 fs-5"
                                @onclick='() => navManager.NavigateTo("/pacientes")'>
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </button>
                    </div>

                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    private PacienteDTO nuevoPaciente = new()
    {
        Estado = "Activo",
        FechaNacimiento = DateTime.Now.AddYears(-20),
        IdUsuario = 1
    };

    private List<DoctorDTO>? doctores;
    private string? errorMessage = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            doctores = await doctorService.GetDoctors();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al cargar doctores: " + ex.Message;
        }
    }

    private async Task GuardarPaciente()
    {
        try
        {
            var pacientes = await pacienteService.GetPacientes();

            if (pacientes.Any(p => p.Email.ToLower() == nuevoPaciente.Email.ToLower()))
            {
                errorMessage = "El correo ingresado ya está en uso.";
                successMessage = null;
                return;
            }

            await pacienteService.AddPaciente(nuevoPaciente);
            successMessage = "Paciente agregado correctamente.";
            errorMessage = null;

            await Task.Delay(1200);
            navManager.NavigateTo("/pacientes");
        }
        catch (Exception ex)
        {
            errorMessage = "Error al guardar paciente: " + ex.Message;
        }
    }
}
