    }

    protected override void OnInitialized()
    {
        nuevoPaciente.IdUsuario = GenerarIdRandom();
    }*/


    private List<DoctorDTO>? doctores;
    private string? errorMessage = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            doctores = await doctorService.GetDoctors();
        }
        catch (Exception ex)
        {
            errorMessage = "Error al cargar doctores: " + ex.Message;
        }
    }

    private async Task GuardarPaciente()
    {
        try
        {
            await pacienteService.AddPaciente(nuevoPaciente);
            successMessage = "Paciente agregado correctamente.";

            await Task.Delay(1500);
            navManager.NavigateTo("/pacientes");
        }
        catch (Exception ex)
        {
            errorMessage = "Error al guardar paciente: " + ex.Message;
        }
    }
}
