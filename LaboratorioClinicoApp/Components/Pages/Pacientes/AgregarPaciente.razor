@page "/pacientes/agregarPaciente"
@using LaboratorioClinicoApp.DTO
@using LaboratorioClinicoApp.Services
@inject PacienteService pacienteService
@inject DoctorService doctorService
@inject NavigationManager navManager

<h3 class="text-center mb-4">Agregar Paciente</h3>

<div class="card p-4 shadow-sm">

    @if (errorMessage != null)
    {
        <div class="alert alert-danger text-center">@errorMessage</div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success text-center">@successMessage</div>
    }

    @if (doctores == null)
    {
        <div class="text-center my-4">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-3">Cargando datos...</p>
        </div>
    }
    else
    {
        <EditForm Model="@nuevoPaciente" OnValidSubmit="GuardarPaciente">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label">Nombre</label>
                    <InputText class="form-control" @bind-Value="nuevoPaciente.Nombre" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Apellido</label>
                    <InputText class="form-control" @bind-Value="nuevoPaciente.Apellido" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Fecha Nacimiento</label>
                    <InputDate class="form-control" @bind-Value="nuevoPaciente.FechaNacimiento" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Teléfono</label>
                    <InputText class="form-control" @bind-Value="nuevoPaciente.Telefono" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <InputText class="form-control" @bind-Value="nuevoPaciente.Email" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Dirección</label>
                    <InputText class="form-control" @bind-Value="nuevoPaciente.Direccion" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Usuario ID</label>
                    <InputNumber class="form-control" @bind-Value="nuevoPaciente.IdUsuario"/>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Doctor Asignado</label>
                    <InputSelect class="form-select" @bind-Value="nuevoPaciente.IdDoctor">
                        <option value="">-- Seleccione un doctor --</option>
                        @foreach (var doc in doctores)
                        {
                            <option value="@doc.Id">@doc.Nombre @doc.Apellido</option>
                        }
                    </InputSelect>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Estado</label>
                    <InputSelect class="form-select" @bind-Value="nuevoPaciente.Estado">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </InputSelect>
                </div>

            </div>

            <div class="mt-4 text-center">
                <button class="btn btn-success px-4 me-2" type="submit">
                    <i class="bi bi-check-circle"></i> Guardar Paciente
                </button>

            </div>

        </EditForm>
    }
</div>

@code {
    private PacienteDTO nuevoPaciente = new()
    {
        Estado = true,
        FechaNacimiento = DateTime.Now.AddYears(-20),
        IdUsuario = 1 // Puedes modificarlo si usás un usuario logueado
    };

