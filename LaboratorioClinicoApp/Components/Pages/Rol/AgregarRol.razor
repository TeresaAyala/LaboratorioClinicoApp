@page "/roles/agregar"
@using LaboratorioClinicoApp.Services
@using LaboratorioClinicoApp.DTO
@inject RolService rolService
@inject NavigationManager navManager

<link rel="stylesheet" href="/css/Rol/agregarRol.css" />

<div class="page-container">
    <div class="form-card">

        <div class="card-header">
            <button class="btn-back" @onclick="Volver">←</button>
            <h2 class="card-title">Crear Nuevo Rol</h2>
        </div>

        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <div class="alert-error">@mensajeError</div>
        }

        <div class="card-body">

            <div class="form-group">
                <label>Nombre del Rol</label>
                <input class="form-input @(string.IsNullOrWhiteSpace(nuevoRol.Nombre) ? "input-error" : "")"
                       placeholder="Escribe el nombre del rol..."
                       @bind="nuevoRol.Nombre" />
            </div>

            <div class="form-group">
                <label>Descripción</label>
                <textarea class="form-input @(string.IsNullOrWhiteSpace(nuevoRol.Descripcion) ? "input-error" : "")"
                          placeholder="Escribe una descripción..."
                          @bind="nuevoRol.Descripcion"></textarea>
            </div>

            <div class="form-group">
                <label>Estado</label>

                <div class="switch-container" @onclick="ToggleEstado">
                    <div class="switch @(nuevoRol.Estado == "Activo" ? "on" : "off")">
                        @nuevoRol.Estado
                    </div>
                </div>
            </div>

            <button class="btn-primary" @onclick="GuardarRol">Guardar Rol</button>

        </div>
    </div>
</div>

@code {

    private RolDTO nuevoRol = new RolDTO { Estado = "Activo" };
    private string? mensajeError;

    void ToggleEstado()
    {
        nuevoRol.Estado = nuevoRol.Estado == "Activo" ? "Inactivo" : "Activo";
    }

    async Task GuardarRol()
    {
        if (string.IsNullOrWhiteSpace(nuevoRol.Nombre) ||
            string.IsNullOrWhiteSpace(nuevoRol.Descripcion))
        {
            mensajeError = "Por favor llena todos los campos.";
            return;
        }

        try
        {
            await rolService.AddRol(nuevoRol);
            navManager.NavigateTo("/roles");
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
    }

    void Volver() => navManager.NavigateTo("/roles");
}


